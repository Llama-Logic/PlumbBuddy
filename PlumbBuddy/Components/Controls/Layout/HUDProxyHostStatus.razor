@using PlumbBuddy.Services.ScriptApi
@inherits ReactiveComponentBase
@inject IMarkupLocalizer<AppText> MarkupLocalizer
@inject IProxyHost ProxyHost
@inject ISuperSnacks SuperSnacks

@if (Observed(() => ProxyHost.IsClientConnected))
{
	<MudTooltip Arrow Color="Color.Success">
		<ChildContent>
			<MudIcon Class="mr-3 mt-1" Color="Color.Success" Icon="@MaterialDesignIcons.Normal.AccessPointNetwork" />
		</ChildContent>
		<TooltipContent>
			<MudStack Row>
				<MudIcon Icon="@MaterialDesignIcons.Normal.AccessPointNetwork" />
				<MudTextM3 Typo="TypoM3.Title">
                    @MarkupLocalizer[nameof(AppText.HUD_ProxyStatus_Tip_Caption)]
                </MudTextM3>
			</MudStack>
			<MudDivider />
			<MudTextM3 Typo="TypoM3.Label" Align="Align.Justify">
                @MarkupLocalizer[nameof(AppText.HUD_ProxyStatus_Tip_Description)]
			</MudTextM3>
		</TooltipContent>
	</MudTooltip>
}
