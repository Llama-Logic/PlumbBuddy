@inherits ReactiveComponentBase
@inject IDialogService DialogService
@inject IGameResourceCataloger GameResourceCataloger
@inject IMarkupLocalizer<AppText> MarkupLocalizer
@inject IModsDirectoryCataloger ModsDirectoryCataloger

<MudTooltip Arrow="true">
    <ChildContent>
        <MudIconButton Disabled="@packSelectorLocked" Icon="@MaterialDesignIcons.Normal.BagPersonalTag" Color="Color.Info" OnClick="@(() => DialogService.ShowPackSelectorDialogAsync())" />
    </ChildContent>
    <TooltipContent>
        <MudStack Row="true">
            <MudIcon Icon="@MaterialDesignIcons.Normal.BagPersonalTag" />
            <MudTextM3 Typo="TypoM3.Title">
                @MarkupLocalizer[nameof(AppText.MainMenu_PackSelector_Label)]
            </MudTextM3>
        </MudStack>
        <MudDivider />
        <MudTextM3 Typo="TypoM3.Label" Align="Align.Justify">
            @MarkupLocalizer[nameof(AppText.MainLayout_PackSelector_Tip)]
        </MudTextM3>
        @if (packSelectorLocked)
        {
            <MudDivider />
            <MudTextM3 Typo="TypoM3.Label" Align="Align.Justify">
                @MarkupLocalizer[nameof(AppText.MainLayout_PackSelector_Tip_Locked)]
            </MudTextM3>
        }
    </TooltipContent>
</MudTooltip>
