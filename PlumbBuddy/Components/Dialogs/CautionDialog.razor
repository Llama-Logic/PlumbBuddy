<MudDialog>
    <TitleContent>
        <MudStack Row="true">
            <MudIcon Icon="@MaterialDesignIcons.Normal.Alert" Color="Color.Warning" />
            <MudTextM3 Typo="TypoM3.Title">@Caption</MudTextM3>
        </MudStack>
    </TitleContent>
    <DialogContent>
        <MudMarkdown Value="@Text" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="CancelOnClickHandler">Cancel</MudButton>
        <MudButton Color="Color.Warning" OnClick="OkOnClickHandler">Ok</MudButton>
    </DialogActions>
</MudDialog>
