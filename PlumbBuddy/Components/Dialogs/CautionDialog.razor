@inject IMarkupLocalizer<AppText> MarkupLocalizer

<MudDialog Class="warning-dialog">
    <TitleContent>
        <MudStack Row="true">
            <MudIcon Icon="@MaterialDesignIcons.Normal.Alert" Color="Color.Warning" />
            <MudTextM3 Typo="TypoM3.Title" Color="Color.Warning">@Caption</MudTextM3>
        </MudStack>
    </TitleContent>
    <DialogContent>
        <MudMarkdown Value="@Text" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="CancelOnClickHandler">
            @MarkupLocalizer[nameof(AppText.Common_Cancel)]
        </MudButton>
        <MudButton Color="Color.Warning" OnClick="OkOnClickHandler">
            @MarkupLocalizer[nameof(AppText.Common_Ok)]
        </MudButton>
    </DialogActions>
</MudDialog>
