@inject IMarkupLocalizer<AppText> MarkupLocalizer

<MudDialog Class="primary-dialog">
    <TitleContent>
        <MudStack Row="true">
            <MudIcon Icon="@MaterialDesignIcons.Normal.ProgressQuestion" Color="Color.Primary" />
            <MudTextM3 Typo="TypoM3.Title" Color="Color.Primary">@Caption</MudTextM3>
        </MudStack>
    </TitleContent>
    <DialogContent>
        <MudMarkdown Value="@Text" />
    </DialogContent>
    <DialogActions>
        @if (UserCanCancel)
        {
            <MudButton OnClick="CancelOnClickHandler">
                @MarkupLocalizer[nameof(AppText.Common_Cancel)]
            </MudButton>
        }
        <MudButton OnClick="NoOnClickHandler">
            @MarkupLocalizer[nameof(AppText.Common_No)]
        </MudButton>
        <MudButton OnClick="YesOnClickHandler" Color="Color.Primary">
            @MarkupLocalizer[nameof(AppText.Common_Yes)]
        </MudButton>
    </DialogActions>
</MudDialog>
