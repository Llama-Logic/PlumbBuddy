@inject IMarkupLocalizer<AppText> MarkupLocalizer

<MudDialog Class="error-dialog">
    <TitleContent>
        <MudStack Row="true">
            <MudIcon Icon="@MaterialDesignIcons.Normal.AlertCircle" Color="Color.Error" />
            <MudTextM3 Typo="TypoM3.Title" Color="Color.Error">@Caption</MudTextM3>
        </MudStack>
    </TitleContent>
    <DialogContent>
        <MudMarkdown Value="@Text" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="OkOnClickHandler">
            @MarkupLocalizer[nameof(AppText.Common_Ok)]
        </MudButton>
    </DialogActions>
</MudDialog>
